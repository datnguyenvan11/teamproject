<% include ../headerAdmin.ejs %>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-info">
                        <h4 class="card-title">Tạo thành công Category</h4>
                    </div>
                    <div class="card-body">
                        <div style="width: 150px; height: 150px; background-image: url('<%= list.categoryImage %>'); background-size: cover">
                            &nbsp
                        </div>
                        <div>Tên category: <%= list.categoryName %></div>
                        <div>Loại category: <%= list.categoryType %></div>
                        <div>Mô tả ngắn: <%= list.categoryShortDescription %></div>
                        <form action="/admin/category/edit" method="post">
                            <div style="display: none"> id <input type="text" name="categoryId" value="<%= list._id%>"></div>
                            <div>
                                <input type="submit" class="btn btn-info pull-center" value="Sửa">
                            </div>
                        </form>
                        <form action="/admin/category/delete" method="post">
                            <div style="display: none"> id <input type="text" name="categoryId" value="<%= list._id%>"></div>
                            <div>
                                <input type="submit" class="btn btn-danger pull-center" value="Xóa">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../footerAdmin.ejs %>